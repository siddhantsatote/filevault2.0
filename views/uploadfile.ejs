<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upload File</title>

    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
      }

      .container {
        display: flex;
        flex-direction: row;
        width: 100%;
      }

      .gallery {
        flex: 2;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
      }

      .preview-section {
        flex: 1;
        margin-left: 20px;
        padding: 20px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        width: 400px;
        height: 500px;
        overflow-y: auto;
      }

      h1 {
        text-align: center;
        color: #333;
      }

      form {
        margin: 20px 0;
        display: flex;
        justify-content: center;
      }

      input[type="file"] {
        margin-right: 10px;
      }

      button {
        padding: 10px 15px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      button:hover {
        background-color: #218838;
      }

      .card {
        background-color: white;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        margin: 15px;
        padding: 15px;
        width: 200px;
        text-align: center;
        transition: transform 0.3s;
        cursor: pointer;
      }

      .card:hover {
        transform: scale(1.05);
      }

      .file-icon {
        width: 100px;
        height: 100px;
        margin-bottom: 10px;
      }

      .card p {
        margin: 5px 0;
      }

      .button-group {
        display: flex;
        justify-content: space-between;
      }

      /* Preview section */
      .preview-section img,
      .preview-section embed,
      .preview-section iframe {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }

      .preview-section p {
        margin: 10px 0;
        color: #555;
      }
    </style>
  </head>
  <body>
    <h1>Upload a File</h1>

    <form action="/upload" method="POST" enctype="multipart/form-data">
      <input type="file" name="file" required />
      <button type="submit">Upload</button>
    </form>

    <div class="container">
      <div class="gallery">
        <% if (files && files.length > 0) { %> <% files.forEach((file, index) =>
        { %>
        <div
          class="card"
          onclick="previewFile('<%= file.fileType %>', '<%= file.fileData.toString('base64') %>', '<%= file.fileName %>', '<%= file.fileSize %>', '<%= file._id %>')"
        >
          <% if (file.fileType.includes('image')) { %>
          <ion-icon
            name="image-outline"
            alt="Image Icon"
            class="file-icon"
          ></ion-icon>
          <% } else if (file.fileType.includes('pdf')) { %>
          <ion-icon
            name="document-text-outline"
            alt="PDF Icon"
            class="file-icon"
          ></ion-icon>
          <% } else if (file.fileType.includes('word')) { %>
          <img src="/images/images.png" alt="Word Icon" class="file-icon" />
          <% } else { %>
          <ion-icon
            name="document-outline"
            alt="File Icon"
            class="file-icon"
          ></ion-icon>
          <% } %>

          <h3>File <%= index + 1 %>:</h3>
          <p>File Name: <%= file.fileName %></p>
          <p>File Size: 
            <%= (file.fileSize >= 1048576) ? (file.fileSize / 1048576).toFixed(2) + ' MB' : 
                (file.fileSize >= 1024) ? (file.fileSize / 1024).toFixed(2) + ' KB' : 
                file.fileSize + ' bytes' %>
          </p>
           

          <div class="button-group">
            <a href="/download/<%= file._id %>" class="btn btn-primary"
              >Download</a
            >
            <form action="/delete/<%= file._id %>" method="POST">
              <button type="submit">Delete</button>
            </form>
          </div>
        </div>
        <% }) %> <% } else { %>
        <p>No files have been uploaded yet.</p>
        <% } %>
      </div>

      <div class="preview-section">
        <h2>File Preview</h2>
        <div id="preview-content">
          <p>Select a file to preview</p>
        </div>
      </div>
    </div>

    <script>
      // Function to convert bytes into human-readable format (KB, MB)
      function formatFileSize(bytes) {
        const kb = 1024;
        const mb = kb * 1024;
        if (bytes >= mb) {
          return (bytes / mb).toFixed(2) + " MB";
        } else if (bytes >= kb) {
          return (bytes / kb).toFixed(2) + " KB";
        } else {
          return bytes + " bytes";
        }
      }
    
      // JavaScript to handle file preview
      function previewFile(fileType, fileData, fileName, fileSize, fileId) {
        const previewContent = document.getElementById("preview-content");
        previewContent.innerHTML = ""; // Clear existing preview content
    
        if (fileType.includes("image")) {
          const img = document.createElement("img");
          img.src = `data:${fileType};base64,${fileData}`;
          previewContent.appendChild(img);
        } else if (fileType.includes("pdf")) {
          const embed = document.createElement("embed");
          embed.src = `data:${fileType};base64,${fileData}`;
          previewContent.appendChild(embed);
        } else if (fileType.includes("word")) {
          const iframe = document.createElement("iframe");
          iframe.src = `https://docs.google.com/gview?url=/download/${fileId}&embedded=true`;
          previewContent.appendChild(iframe);
        } else {
          const message = document.createElement("p");
          message.textContent = "Cannot preview this file type.";
          previewContent.appendChild(message);
        }
    
        const name = document.createElement("p");
        name.textContent = `File Name: ${fileName}`;
        previewContent.appendChild(name);
    
        const size = document.createElement("p");
        size.textContent = `File Size: ${formatFileSize(fileSize)}`; // Use the formatFileSize function
        previewContent.appendChild(size);
      }
    </script>
    
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
  </body>
</html>
